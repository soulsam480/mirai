{
  "name": "mirai",
  "version": "0.0.0",
  "description": "University placement platform",
  "scripts": {
    "lint": "eslint **/{src,prisma}/**/*.{js,ts,tsx}",
    "lint-fix": "pnpm lint --fix",
    "fmt": "prettier --config ./prettier.config.cjs --plugin=prettier-plugin-tailwindcss --write **/{src,prisma}/**/*.{js,ts,tsx}",
    "dev:app": "pnpm run --filter @mirai/app dx",
    "dev:api": "pnpm run --filter @mirai/api dx",
    "dev": "run-p dev:*",
    "db-nuke": "pnpm run --filter @mirai/api db-nuke",
    "build:app": "pnpm run --filter @mirai/app build",
    "build:api": "pnpm run --filter @mirai/api build",
    "build": "pnpm run build-schema && run-p build:*",
    "start:api": "pnpm run --filter @mirai/api start",
    "start:app": "pnpm run --filter @mirai/app start",
    "start": "run-p start:*",
    "prepare": "husky install",
    "studio": "pnpm run --filter @mirai/api studio",
    "type-check": "tsc --pretty --noEmit --incremental --tsBuildInfoFile \"temp/.tsBuildInfo\" -p tsconfig.check.json",
    "build-schema": "pnpm run --filter @mirai/schema build",
    "dev:schema": "pnpm run --filter @mirai/schema dev",
    "postinstall": "pnpm run build-schema"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --config ./prettier.config.cjs --plugin=prettier-plugin-tailwindcss --write",
      "eslint --cache --fix"
    ]
  },
  "dependencies": {
    "@mirai/api": "workspace:*",
    "@mirai/app": "workspace:*",
    "@prisma/client": "^4.8.1",
    "bcryptjs": "^2.4.3",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.7",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mitt": "^3.0.0",
    "next-auth": "^4.18.8",
    "rimraf": "^3.0.2",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "concurrently": "^7.6.0",
    "eslint": "^8.31.0",
    "eslint-config-next": "^13.1.6",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "nanoid": "^3.3.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.2",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "unplugin-icons": "^0.15.1"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com-soulsam480:soulsam480/mirai.git"
  }
}
