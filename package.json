{
  "name": "mirai",
  "version": "0.0.0",
  "description": "University placement platform",
  "scripts": {
    "lint": "eslint **/{src,prisma}/**/*.{js,ts,tsx}",
    "lint-fix": "pnpm lint --fix",
    "fmt": "prettier --config ./prettier.config.cjs --plugin=prettier-plugin-tailwindcss --write **/{src,prisma}/**/*.{js,ts,tsx}",
    "dev:app": "pnpm run --filter @mirai/app dx",
    "dev:api": "pnpm run --filter @mirai/api dx",
    "dev": "run-p dev:*",
    "db-nuke": "pnpm run --filter @mirai/api db-nuke",
    "build:api": "pnpm run --filter @mirai/api build",
    "build:app": "pnpm run --filter @mirai/app build",
    "build": "run-p build:*",
    "prepare": "husky install",
    "studio": "pnpm run --filter @mirai/api studio"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --config ./prettier.config.cjs --plugin=prettier-plugin-tailwindcss --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@mirai/api": "workspace:*",
    "@mirai/app": "workspace:*",
    "@prisma/client": "^4.2.1",
    "bcryptjs": "^2.4.3",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.5",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mitt": "^3.0.0",
    "next-auth": "^4.10.3",
    "rimraf": "^3.0.2",
    "zod": "^3.18.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.7.11",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "concurrently": "^7.3.0",
    "eslint": "^8.21.0",
    "eslint-config-next": "^12.2.5",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nanoid": "^3.3.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com-soulsam480:soulsam480/mirai.git"
  }
}
