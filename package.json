{
  "name": "mirai",
  "version": "0.0.0",
  "description": "University placement platform",
  "scripts": {
    "lint": "eslint **/{src,prisma}/**/*.{js,ts,tsx}",
    "lint-fix": "pnpm lint --fix",
    "fmt": "prettier --write **/{src,prisma}/**/*.{js,ts,tsx}",
    "dev:app": "pnpm run --filter @mirai/app dx",
    "dev:api": "pnpm run --filter @mirai/api dx",
    "dev": "concurrently --kill-others-on-fail \"pnpm run dev:app\"  \"pnpm run dev:api\"",
    "db-nuke": "pnpm run --filter @mirai/api db-nuke",
    "build:api": "pnpm run --filter @mirai/api build",
    "build:app": "pnpm run --filter @mirai/app build",
    "build": "run-p build:*"
  },
  "dependencies": {
    "@mirai/api": "workspace:*",
    "@mirai/app": "workspace:*",
    "@prisma/client": "^3.11.1",
    "@trpc/client": "^9.20.3",
    "cross-env": "^7.0.3",
    "rimraf": "^3.0.2",
    "zod": "^3.14.3"
  },
  "devDependencies": {
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.12.0",
    "eslint-config-next": "^12.1.2",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "nanoid": "^3.3.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.1",
    "ts-node": "^10.7.0",
    "typescript": "4.6.4"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com-soulsam480:soulsam480/mirai.git"
  }
}
