{
  "name": "mirai",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build:1-migrate": "prisma migrate deploy",
    "build:2-build": "next build",
    "build": "run-s build:*",
    "db-up": "docker-compose up -d",
    "db-seed": "prisma db seed",
    "db-migrate-dev": "yarn prisma migrate dev",
    "db-nuke": "docker-compose down --volumes --remove-orphans",
    "dev": "next dev",
    "dx": "cross-env DATABASE_URL=postgresql://postgres:@localhost:5632/mirai run-s db-up db-migrate-dev dev",
    "start": "next start",
    "lint": "eslint src",
    "lint-fix": "yarn lint --fix",
    "test-dev": "start-server-and-test dev 3000 test",
    "test-start": "start-server-and-test start 3000 test",
    "test": "run-s test:*",
    "test:unit": "jest",
    "test:e2e": "jest --config jest.playwright.config.ts",
    "ts-node": "ts-node --compiler-options \"{\\\"module\\\":\\\"commonjs\\\"}\"",
    "postinstall": "prisma generate",
    "fmt": "prettier --write {src,prisma}/**/*.{js,ts,tsx}"
  },
  "prisma": {
    "seed": "yarn ts-node prisma/seed.ts"
  },
  "prettier": {
    "semi": true,
    "arrowParens": "always",
    "printWidth": 120,
    "bracketSpacing": true,
    "trailingComma": "all",
    "singleQuote": true,
    "htmlWhitespaceSensitivity": "ignore"
  },
  "dependencies": {
    "@prisma/client": "^3.8.0",
    "@trpc/client": "^9.16.0",
    "@trpc/next": "^9.16.0",
    "@trpc/react": "^9.16.0",
    "@trpc/server": "^9.16.0",
    "clsx": "^1.1.1",
    "daisyui": "^1.22.2",
    "dayjs": "^1.10.7",
    "jsonwebtoken": "^8.5.1",
    "nanoid": "^3.1.32",
    "next": "^12.0.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-query": "^3.34.8",
    "start-server-and-test": "^1.12.0",
    "superjson": "^1.7.4",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.7",
    "@types/node": "^16.11.19",
    "@types/react": "^17.0.38",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.26.0",
    "autoprefixer": "^10.4.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-next": "^12.0.8",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^27.4.7",
    "jest-playwright": "^0.0.1",
    "jest-playwright-preset": "^1.4.5",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.14.1",
    "postcss": "^8.4.5",
    "prettier": "^2.3.2",
    "prisma": "^3.8.0",
    "tailwindcss": "^3.0.13",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.3.0",
    "typescript": "4.4.4"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
