{
  "name": "mirai",
  "version": "0.0.0",
  "description": "University placement platform",
  "scripts": {
    "lint": "eslint **/{src,prisma}/**/*.{js,ts,tsx}",
    "lint-fix": "pnpm lint --fix",
    "fmt": "prettier --config ./prettier.config.cjs --plugin=prettier-plugin-tailwindcss --write **/{src,prisma}/**/*.{js,ts,tsx}",
    "dev:app": "pnpm run --filter @mirai/app dx",
    "dev:api": "pnpm run --filter @mirai/api dx",
    "dev": "concurrently --kill-others-on-fail \"pnpm run dev:app\"  \"pnpm run dev:api\"",
    "db-nuke": "pnpm run --filter @mirai/api db-nuke",
    "build:api": "pnpm run --filter @mirai/api build",
    "build:app": "pnpm run --filter @mirai/app build",
    "build": "run-p build:*",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --config ./prettier.config.cjs --plugin=prettier-plugin-tailwindcss --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@mirai/api": "workspace:*",
    "@mirai/app": "workspace:*",
    "@prisma/client": "^3.14.0",
    "bcryptjs": "^2.4.3",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.2",
    "jsonwebtoken": "^8.5.1",
    "rimraf": "^3.0.2",
    "zod": "^3.16.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "concurrently": "^7.1.0",
    "eslint": "^8.15.0",
    "eslint-config-next": "^12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "nanoid": "^3.3.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.10",
    "ts-node": "^10.7.0",
    "typescript": "4.6.4"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com-soulsam480:soulsam480/mirai.git"
  }
}
